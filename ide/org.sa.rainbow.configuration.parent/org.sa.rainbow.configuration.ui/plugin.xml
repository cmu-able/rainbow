<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
	<extension
		point="org.eclipse.ui.editors">
		<editor
        class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
        contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
        default="true"
        extensions="rbw"
        id="org.sa.rainbow.configuration.rcl"
        icon="icons/rbw.png"
        name="Rainbow Editor">
		</editor>
	</extension>
	<extension
		point="org.eclipse.ui.handlers">
		<handler
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
			commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
			<activeWhen>
				<reference
					definitionId="org.sa.rainbow.configuration.Rcp.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
		<handler
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
			commandId="org.sa.rainbow.configuration.Rcp.validate">
		<activeWhen>
			<reference
					definitionId="org.sa.rainbow.configuration.Rcl.Editor.opened">
			</reference>
		</activeWhen>
		</handler>
		<!-- copy qualified name -->
		<handler
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedNameHandler"
			commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName">
			<activeWhen>
				<reference definitionId="org.sa.rainbow.configuration.Rcl.Editor.opened" />
			</activeWhen>
		</handler>
		<handler
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedNameHandler"
			commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName">
			<activeWhen>
				<and>
					<reference definitionId="org.sa.rainbow.configuration.Rcl.XtextEditor.opened" />
					<iterate>
						<adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
					</iterate>
				</and>
			</activeWhen>
		</handler>
	</extension>
	<extension
			point="org.eclipse.ui.preferencePages">
		<page
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
			id="org.sa.rainbow.configuration.Rcl"
			name="Rainbow RCL">
			<keywordReference id="org.sa.rainbow.configuration.ui.keyword_Rcl"/>
		</page>
		<page
			category="org.sa.rainbow.configuration.Rcl"
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
			id="org.sa.rainbow.configuration.Rcl.coloring"
			name="Syntax Coloring">
			<keywordReference id="org.sa.rainbow.configuration.ui.keyword_Rcl"/>
		</page>
		<page
			category="org.sa.rainbow.configuration.Rcl"
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
			id="org.sa.rainbow.configuration.Rcl.templates"
			name="Templates">
			<keywordReference id="org.sa.rainbow.configuration.ui.keyword_Rcl"/>
		</page>
	</extension>
	<extension
			point="org.eclipse.ui.propertyPages">
		<page
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
			id="org.sa.rainbow.configuration.Rcl"
			name="Rainbow RCL">
			<keywordReference id="org.sa.rainbow.configuration.ui.keyword_Rcl"/>
			<enabledWhen>
				<adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
			<filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
		</page>
	</extension>
	<extension
		point="org.eclipse.ui.keywords">
		<keyword
			id="org.sa.rainbow.configuration.ui.keyword_Rcl"
			label="Rainbow RCL"/>
	</extension>
	<extension
		point="org.eclipse.ui.commands">
	<command
			description="Trigger expensive validation"
			id="org.sa.rainbow.configuration.Rcl.validate"
			name="Validate">
	</command>
	<!-- copy qualified name -->
	<command
			id="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName"
			categoryId="org.eclipse.ui.category.edit"
			description="Copy the qualified name for the selected element"
			name="Copy Qualified Name">
	</command>
	<command
			id="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName"
			categoryId="org.eclipse.ui.category.edit"
			description="Copy the qualified name for the selected element"
			name="Copy Qualified Name">
	</command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:#TextEditorContext?after=group.edit">
			 <command
				 commandId="org.sa.rainbow.configuration.Rcl.validate"
				 style="push"
				 tooltip="Trigger expensive validation">
			<visibleWhen checkEnabled="false">
				<reference
					definitionId="org.sa.rainbow.configuration.Rcl.Editor.opened">
				</reference>
			</visibleWhen>
		</command>
		</menuContribution>
		<!-- copy qualified name -->
		<menuContribution locationURI="popup:#TextEditorContext?after=copy">
			<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName"
				style="push" tooltip="Copy Qualified Name">
				<visibleWhen checkEnabled="false">
					<reference definitionId="org.sa.rainbow.configuration.Rcl.Editor.opened" />
				</visibleWhen>
			</command>
		</menuContribution>
		<menuContribution locationURI="menu:edit?after=copy">
			<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName"
				style="push" tooltip="Copy Qualified Name">
				<visibleWhen checkEnabled="false">
					<reference definitionId="org.sa.rainbow.configuration.Rcl.Editor.opened" />
				</visibleWhen>
			</command>
		</menuContribution>
		<menuContribution locationURI="popup:org.eclipse.xtext.ui.outline?after=additions">
			<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName"
				style="push" tooltip="Copy Qualified Name">
				<visibleWhen checkEnabled="false">
					<and>
						<reference definitionId="org.sa.rainbow.configuration.Rcl.XtextEditor.opened" />
						<iterate>
							<adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
						</iterate>
					</and>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
			<command commandId="org.eclipse.xtext.ui.editor.FindReferences">
				<visibleWhen checkEnabled="false">
					<reference definitionId="org.sa.rainbow.configuration.Rcl.Editor.opened">
					</reference>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.handlers">
		<handler
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.FindReferencesHandler"
			commandId="org.eclipse.xtext.ui.editor.FindReferences">
			<activeWhen>
				<reference
					definitionId="org.sa.rainbow.configuration.Rcl.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
	<extension point="org.eclipse.core.contenttype.contentTypes">
		<content-type
			base-type="org.eclipse.core.runtime.text"
			file-extensions="rbw"
			id="org.sa.rainbow.configuration.Rcl.contenttype"
			name="Rainbow RCL File"
			priority="normal">
		</content-type>
	</extension>
	<!-- adding resource factories -->
	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
			type="rbw">
		</parser>
	</extension>
	<extension point="org.eclipse.xtext.extension_resourceServiceProvider">
		<resourceServiceProvider
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
			uriExtension="rbw">
		</resourceServiceProvider>
	</extension>
	<!-- marker definitions for org.sa.rainbow.configuration.Rcl -->
	<extension
			id="configmodel.check.fast"
			name="Rainbow RCL Problem"
			point="org.eclipse.core.resources.markers">
		<super type="org.eclipse.xtext.ui.check.fast"/>
		<persistent value="true"/>
	</extension>
	<extension
			id="configmodel.check.normal"
			name="Rainbow RCL Problem"
			point="org.eclipse.core.resources.markers">
		<super type="org.eclipse.xtext.ui.check.normal"/>
		<persistent value="true"/>
	</extension>
	<extension
			id="configmodel.check.expensive"
			name="Rainbow RCL Problem"
			point="org.eclipse.core.resources.markers">
		<super type="org.eclipse.xtext.ui.check.expensive"/>
		<persistent value="true"/>
	</extension>
	<extension point="org.eclipse.ui.preferencePages">
		<page
			category="org.sa.rainbow.configuration.Rcl"
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.validation.ValidatorPreferencePage"
			id="org.sa.rainbow.configuration.Rcl.validator.preferencePage"
			name="Errors/Warnings">
			<keywordReference id="org.sa.rainbow.configuration.ui.keyword_Rcl"/>
		</page>
	</extension>
	<extension point="org.eclipse.xtext.builder.participant">
		<participant
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.builder.IXtextBuilderParticipant"
			fileExtensions="rbw"/>
	</extension>
	<extension point="org.eclipse.ui.preferencePages">
		<page
			category="org.sa.rainbow.configuration.Rcl"
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.builder.preferences.BuilderPreferencePage"
			id="org.sa.rainbow.configuration.Rcl.compiler.preferencePage"
			name="Compiler">
			<keywordReference id="org.sa.rainbow.configuration.ui.keyword_Rcl"/>
		</page>
	</extension>
	<extension point="org.eclipse.ui.propertyPages">
		<page
			category="org.sa.rainbow.configuration.Rcl"
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.builder.preferences.BuilderPreferencePage"
			id="org.sa.rainbow.configuration.Rcl.compiler.propertyPage"
			name="Compiler">
			<keywordReference id="org.sa.rainbow.configuration.ui.keyword_Rcl"/>
			<enabledWhen>
				<adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
			<filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
		</page>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:#TextEditorContext?after=xtext.ui.openDeclaration">
			<command
				commandId="org.eclipse.xtext.ui.OpenGeneratedFileCommand"
				id="org.sa.rainbow.configuration.Rcl.OpenGeneratedCode"
				style="push">
				<visibleWhen checkEnabled="false">
					<reference definitionId="org.sa.rainbow.configuration.Rcl.Editor.opened" />
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.handlers">
		<handler
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.generator.trace.OpenGeneratedFileHandler"
			commandId="org.eclipse.xtext.ui.OpenGeneratedFileCommand">
			<activeWhen>
				<reference definitionId="org.sa.rainbow.configuration.Rcl.Editor.opened" />
			</activeWhen>
		</handler>
	</extension>
	<!-- Quick Outline -->
	<extension
		point="org.eclipse.ui.handlers">
		<handler 
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.editor.outline.quickoutline.ShowQuickOutlineActionHandler"
			commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline">
			<activeWhen>
				<reference
					definitionId="org.sa.rainbow.configuration.Rcl.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
	<extension
		point="org.eclipse.ui.commands">
		<command
			description="Open the quick outline."
			id="org.eclipse.xtext.ui.editor.outline.QuickOutline"
			name="Quick Outline">
		</command>
  <command
        id="org.sa.rainbow.configuration.ui.insertLeftGuillemet"
        name="Insert left guillemet"
        description="Inserts an opening french quote">
  </command>
  <command
        id="org.sa.rainbow.configuration.ui.insertRightGuillemet"
        name="Insert right gulliment."
        description="Inserts a closing french quote">
  </command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:#TextEditorContext?after=group.open">
			<command commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline"
				style="push"
				tooltip="Open Quick Outline">
				<visibleWhen checkEnabled="false">
					<reference definitionId="org.sa.rainbow.configuration.Rcl.Editor.opened"/>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<!-- quickfix marker resolution generator for org.sa.rainbow.configuration.Rcl -->
	<extension
			point="org.eclipse.ui.ide.markerResolution">
		<markerResolutionGenerator
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
			markerType="org.sa.rainbow.configuration.ui.configmodel.check.fast">
			<attribute
				name="FIXABLE_KEY"
				value="true">
			</attribute>
		</markerResolutionGenerator>
		<markerResolutionGenerator
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
			markerType="org.sa.rainbow.configuration.ui.configmodel.check.normal">
			<attribute
				name="FIXABLE_KEY"
				value="true">
			</attribute>
		</markerResolutionGenerator>
		<markerResolutionGenerator
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
			markerType="org.sa.rainbow.configuration.ui.configmodel.check.expensive">
			<attribute
				name="FIXABLE_KEY"
				value="true">
			</attribute>
		</markerResolutionGenerator>
	</extension>
	<!-- Rename Refactoring -->
	<extension point="org.eclipse.ui.handlers">
		<handler 
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.DefaultRenameElementHandler"
			commandId="org.eclipse.xtext.ui.refactoring.RenameElement">
			<activeWhen>
				<reference
					definitionId="org.sa.rainbow.configuration.Rcl.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:#TextEditorContext?after=group.edit">
			<command commandId="org.eclipse.xtext.ui.refactoring.RenameElement"
				style="push">
				<visibleWhen checkEnabled="false">
					<reference
						definitionId="org.sa.rainbow.configuration.Rcl.Editor.opened">
					</reference>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.preferencePages">
		<page
			category="org.sa.rainbow.configuration.Rcl"
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.RefactoringPreferencePage"
			id="org.sa.rainbow.configuration.Rcl.refactoring"
			name="Refactoring">
			<keywordReference id="org.sa.rainbow.configuration.ui.keyword_Rcl"/>
		</page>
	</extension>
	<extension point="org.eclipse.compare.contentViewers">
		<viewer id="org.sa.rainbow.configuration.Rcl.compare.contentViewers"
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
			extensions="rbw">
		</viewer>
		<contentTypeBinding
			contentTypeId="org.sa.rainbow.configuration.Rcl.contenttype"
			contentViewerId="org.sa.rainbow.configuration.Rcl.compare.contentViewers" />
	</extension>
	<extension point="org.eclipse.compare.contentMergeViewers">
		<viewer id="org.sa.rainbow.configuration.Rcl.compare.contentMergeViewers"
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
			extensions="rbw" label="Rcl Compare">
		</viewer>
		<contentTypeBinding
			contentTypeId="org.sa.rainbow.configuration.Rcl.contenttype"
			contentMergeViewerId="org.sa.rainbow.configuration.Rcl.compare.contentMergeViewers" />
	</extension>
	<extension point="org.eclipse.ui.editors.documentProviders">
		<provider id="org.sa.rainbow.configuration.Rcl.editors.documentProviders"
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.editor.model.XtextDocumentProvider"
			extensions="rbw">
		</provider>
	</extension>
	<extension point="org.eclipse.team.core.fileTypes">
		<fileTypes
			extension="rbw"
			type="text">
		</fileTypes>
	</extension>
	   <extension point="org.eclipse.core.expressions.definitions">
        <definition id="org.sa.rainbow.configuration.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="org.sa.rainbow.configuration.Rcl" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
     </extension>
	<extension
         point="org.eclipse.ui.contexts">
      <context
            description="Rainbow Configuration Editor"
            id="org.sa.rainbow.configuration.ide.RCLEditorScope"
            name="RCLContext"
            parentId="org.eclipse.xtext.ui.XtextEditorScope">
      </context>
   </extension>
 <extension
       point="org.eclipse.ui.bindings">
       
     <key
          commandId="org.sa.rainbow.configuration.ui.insertLeftGuillemet"
          schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
          sequence="&lt;">
    </key>
    <key
          commandId="org.sa.rainbow.configuration.ui.insertRightGuillemet"
          schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
          sequence="M1+">
    </key>
 </extension>
 <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.sa.rainbow.configuration.ui.commands.InsertStringHandler$LeftGuillemet"
            commandId="org.eclipse.xtend.ide.insertLeftGuillemet">
            <!--
            <activeWhen>
				<reference
					definitionId="org.eclipse.xtend.core.Xtend.Editor.opened">
				</reference>
			</activeWhen>
			-->
      </handler>
      <handler
            class="org.sa.rainbow.configuration.ui.commands.InsertStringHandler$RightGuillemet"
            commandId="org.eclipse.xtend.ide.insertRightGuillemet">
           	<activeWhen>
				<reference
					definitionId="org.sa.rainbow.configuration.Rcl.Editor.opened">
				</reference>
			</activeWhen>
      </handler>
   </extension>
   	<extension
		point="org.eclipse.ui.newWizards">
		<category id="org.sa.rainbow.configuration.ui.category" name="Rainbow">
		</category>
		<wizard
			category="org.sa.rainbow.configuration.ui.category"
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.eclipse.xtext.ui.wizard.template.TemplateNewProjectWizard"
			id="org.sa.rainbow.configuration.ui.wizard.RclNewProjectWizard"
			name="Rainbow Project"
			icon="icons/rainbow_project.gif"
			project="true">
		</wizard>
	</extension>
	<extension
		point="org.eclipse.xtext.ui.projectTemplate">
		<projectTemplateProvider
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.sa.rainbow.configuration.ui.wizard.ConfigModelProjectTemplateProvider"
			grammarName="org.sa.rainbow.configuration.Rcl">
		</projectTemplateProvider>
	</extension>
	<extension
		point="org.eclipse.ui.perspectiveExtensions">
		<perspectiveExtension targetID="org.eclipse.ui.resourcePerspective">
			<newWizardShortcut id="org.sa.rainbow.configuration.ui.wizard.RclNewProjectWizard"/>
		</perspectiveExtension>
		<perspectiveExtension targetID="org.eclipse.jdt.ui.JavaPerspective">
			<newWizardShortcut id="org.sa.rainbow.configuration.ui.wizard.RclNewProjectWizard"/>
		</perspectiveExtension>
	</extension>
	<extension
		point="org.eclipse.ui.newWizards">
		<category id="org.sa.rainbow.configuration.ui.category" name="Rainbow">
		</category>
		<wizard
			category="org.sa.rainbow.configuration.ui.category"
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.sa.rainbow.configuration.ui.wizard.TemplateNewTargetWizard"
			id="org.sa.rainbow.configuration.ui.wizard.ConfigModelNewFileWizard"
			name="Rainbow Target Directory"
			icon="icons/new_ConfigModel_file.png">
		</wizard>
	</extension>
	<extension
		point="org.eclipse.xtext.ui.fileTemplate">
		<fileTemplateProvider
			class="org.sa.rainbow.configuration.ui.RclExecutableExtensionFactory:org.sa.rainbow.configuration.ui.wizard.RclFileTemplateProvider"
			grammarName="org.sa.rainbow.configuration.Rcl">
		</fileTemplateProvider>
	</extension>
	<extension
		point="org.eclipse.ui.perspectiveExtensions">
		<perspectiveExtension targetID="org.eclipse.ui.resourcePerspective">
			<newWizardShortcut id="org.sa.rainbow.configuration.ui.wizard.RclNewFileWizard"/>
		</perspectiveExtension>
		<perspectiveExtension targetID="org.eclipse.jdt.ui.JavaPerspective">
			<newWizardShortcut id="org.sa.rainbow.configuration.ui.wizard.RclNewFileWizard"/>
		</perspectiveExtension>
	</extension>
</plugin>
