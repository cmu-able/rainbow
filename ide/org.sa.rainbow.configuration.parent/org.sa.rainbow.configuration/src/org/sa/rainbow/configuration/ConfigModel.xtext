//	{RichString} (
//		expressions+=RichStringLiteralSQ |
//		expressions+=RichStringLiteralStartSQ expressions+=RichStringPart?
//		(expressions+=RichStringLiteralInbetweenSQ expression+=RichStringPart?)*
//		expressions+=RichStringLiteralEndSQ
//	)
//;
