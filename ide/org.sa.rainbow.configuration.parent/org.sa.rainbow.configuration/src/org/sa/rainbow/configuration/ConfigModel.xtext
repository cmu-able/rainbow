terminal RICH_TEXT_DQ returns ecore::EString:
	'"' IN_RICH_STRING_DQ* '"'
;

terminal RICH_TEXT_START_DQ:
	'"' IN_RICH_STRING_DQ* '«'
;

terminal RICH_TEXT_END_DQ:
	'»' IN_RICH_STRING_DQ* '"'
;

terminal RICH_TEXT_INBETWEEN_DQ:
	'»' IN_RICH_STRING_DQ* '«'
;


