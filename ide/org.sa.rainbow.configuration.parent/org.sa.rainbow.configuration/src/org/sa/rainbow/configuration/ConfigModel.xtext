terminal fragment IN_RICH_STRING_DQ:
	!('«'|'"'|'»'|"\n"|"\r")
;




terminal ML_COMMENT:
  '/*'->'*/';

terminal SL_COMMENT:
  ('//' | '#') !('\n' | '\r')* ('\r'? '\n')?;

terminal WS:
  (' ' | '\t' | '\r' | '\n')+;

terminal ANY_OTHER:
  .;



